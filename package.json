{
	"name": "boilerplate-vite-react-tailwind",
	"private": true,
	"version": "0.0.0",
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"check:prettier": "prettier --config .prettierrc ./src/ --check",
		"check:lint": "eslint . --quiet --ignore-path .gitignore && echo 'Looks good ðŸ˜ƒ'",
		"check:ts": "tsc",
		"format:lint": "eslint . --fix --quiet --ignore-path .gitignore && echo 'Format Lint Done âœ…'",
		"format:prettier": "prettier --config .prettierrc . --ignore-path .gitignore --write --log-level silent && echo 'Format Prettier Done âœ…'",
		"preview": "vite preview",
		"checker": "yarn check:lint && yarn check:prettier && yarn check:ts",
		"prepare": "husky install"
	},
	"dependencies": {
		"@hookform/resolvers": "^3.2.0",
		"autoprefixer": "^10.4.14",
		"postcss": "^8.4.24",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-hook-form": "^7.45.4",
		"react-icons": "^4.10.1",
		"react-toastify": "^9.1.3",
		"tailwindcss": "^3.3.2",
		"zod": "^3.21.4"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.7.1",
		"@commitlint/config-conventional": "^17.7.0",
		"@types/react": "^18.0.37",
		"@types/react-dom": "^18.0.11",
		"@typescript-eslint/eslint-plugin": "^6.4.1",
		"@typescript-eslint/parser": "^6.4.1",
		"@vitejs/plugin-react": "^4.0.0",
		"eslint": "^8.38.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-import-helpers": "^1.3.1",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-react-refresh": "^0.3.4",
		"husky": "^8.0.0",
		"lint-staged": "^14.0.1",
		"prettier": "^3.0.2",
		"prettier-plugin-tailwindcss": "^0.5.3",
		"typescript": "^5.0.2",
		"vite": "^4.3.9"
	},
	"lint-staged": {
		"*.{js, jsx, ts, tsx}": [
			"eslint --cache --fix"
		],
		"*.{css,scss,md,html}": [
			"prettier --write"
		]
	},
	"main": "index.js",
	"repository": "https://github.com/alfanfauzy/alfan-login-page.git",
	"author": "alfanfauzy <zhafhy@gmail.com>",
	"license": "MIT"
}
